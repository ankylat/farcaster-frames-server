generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  fid               Int              @id @unique
  fetchedUserData   Boolean          @default(false)
  replyFrequency    Int?
  casts             String[]
  followingBios     String[]
  CastRepliedToUser CastRepliedToUser[]
  testing           String?
}

model CastRepliedToUser {
  castHash                   String   @id @unique
  fid                        Int
  originalCastText           String
  replyCastText              String
  userFeedbackCastText       String
  ratingFromUser             Int
  timestampOfReply           DateTime
  timestampOfUserInteraction DateTime
  iceBreakerText             String
  user                       User     @relation(fields: [fid], references: [fid])
}

model IceBreaker {
  id                    Int    @id @default(autoincrement())
  initialIcebreaker     String
  userConversationOne   String
  botReplyOne           String
  userConversationTwo   String
  botReplyTwo           String
  userConversationThree String
  botReplyThree         String
  comeBackTomorrow      String
}

