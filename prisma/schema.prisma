generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  fid       Int            @id   @unique      // Frontend identifier if needed
  sessions  WritingSession[] // Relation to WritingSession
}

model WritingSession {
  id        Int      @id @default(autoincrement())
  userFid    Int      // Relation to User
  text      String   // The text written during the session
  timestamp DateTime @default(now()) // Timestamp of the session
  User      User     @relation(fields: [userFid], references: [fid])
}
